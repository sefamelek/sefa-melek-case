<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
        <Property name="LOG_FILE_PATH">logs/insider-automation.log</Property>
    </Properties>

    <Appenders>
        <!-- Console Appender - Sadece ERROR seviyesindeki loglar -->
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <!-- File Appender - Tüm loglar (INFO, DEBUG, WARN, ERROR) dosyaya kaydedilir -->
        <RollingFile name="FileAppender" fileName="${LOG_FILE_PATH}"
                     filePattern="logs/insider-automation-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <!-- Günlük olarak log dosyası rotate edilir -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <!-- 10MB'dan büyük olursa yeni dosya oluşturulur -->
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <!-- Son 10 dosya saklanır -->
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Selenium ve ilgili loglarını ERROR seviyesine çıkar (gereksiz uyarıları gizle) -->
        <Logger name="org.openqa.selenium" level="ERROR"/>
        <Logger name="org.openqa.selenium.devtools" level="ERROR"/>
        <Logger name="org.openqa.selenium.devtools.CdpVersionFinder" level="ERROR"/>
        <Logger name="org.apache.http" level="ERROR"/>
        <Logger name="io.github.bonigarcia" level="ERROR"/>
        <Logger name="io.qameta.allure" level="ERROR"/>
        <Logger name="io.qameta.allure.AllureLifecycle" level="OFF"/>
        <Logger name="io.qameta.allure.util" level="ERROR"/>
        <Logger name="org.aspectj" level="ERROR"/>
        
        <!-- Test logları için özel logger -->
        <Logger name="com.insider.tests" level="INFO" additivity="false">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- Root Logger -->
        <Root level="INFO">
            <!-- Console: Sadece ERROR logları görünür -->
            <AppenderRef ref="ConsoleAppender"/>
            <!-- Dosya: Tüm loglar (INFO, DEBUG, WARN, ERROR) kaydedilir -->
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>

